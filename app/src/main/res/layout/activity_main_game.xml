<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/my_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/my_tabStrip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_strip_82"
            android:layout_below="@+id/my_viewPager"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tab_margin_32"
            android:layout_marginRight="@dimen/tab_margin_32"
            app:pstsIndicatorColor="@color/white"
            app:pstsIndicatorHeight="0dp"
            app:pstsShouldExpand="true"
            app:pstsTabBackground="@drawable/custom_edittext"
            app:pstsTabPaddingLeftRight="0dp" />
    </LinearLayout>

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/my_menu" />

</RelativeLayout>
