<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/register_margin_64"
        android:background="@drawable/custom_rounded_dialog_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/register_margin_8"
            android:layout_marginRight="@dimen/register_margin_8"
            android:layout_marginTop="@dimen/register_margin_8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Register"
                android:textColor="@color/yellow"
                android:textSize="@dimen/register_text_20"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/register_button_close_width_32"
                android:layout_height="@dimen/register_button_close_height_32"
                android:background="@drawable/button_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/register_margin_16"
            android:layout_marginLeft="@dimen/register_margin_16"
            android:layout_marginRight="@dimen/register_margin_16"
            android:layout_marginTop="@dimen/register_margin_8"
            android:background="@drawable/custom_rounded_dialog_body"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/register_margin_16"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView_register_avatar"
                    android:layout_width="@dimen/register_avatar_width_100"
                    android:layout_height="@dimen/register_avatar_height_100"
                    android:src="@drawable/avatar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/register_margin_16"
                android:layout_marginLeft="@dimen/register_margin_32"
                android:layout_marginRight="@dimen/register_margin_32"
                android:layout_marginTop="@dimen/register_margin_32"
                android:gravity="center">

                <EditText
                    android:id="@+id/edittext_register_input"
                    android:layout_width="@dimen/register_edt_width_252"
                    android:layout_height="@dimen/register_edt_height_42"
                    android:background="@drawable/custom_edittext"
                    android:gravity="center"
                    android:hint="@string/nickName"
                    android:textColor="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/register_margin_16"
                android:layout_marginLeft="@dimen/register_margin_32"
                android:layout_marginRight="@dimen/register_margin_32"
                android:gravity="center">

                <Button
                    android:id="@+id/button_register_ok"
                    android:layout_width="@dimen/register_button_width_252"
                    android:layout_height="@dimen/register_button_height_42"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/register_text_20"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>