<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="@dimen/main_menu_margin_64"
    android:layout_marginRight="@dimen/main_menu_margin_64"
    android:background="@drawable/panel_guest"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_menu_margin_10"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_menu_facebook"
            android:layout_width="@dimen/main_menu_button_width_200"
            android:layout_height="@dimen/main_menu_button_height_40"
            android:layout_marginTop="@dimen/main_menu_margin_bottom_25"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/facebook"
            android:textColor="@color/white"
            android:textSize="@dimen/main_menu_text_28"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_menu_sound"
            android:layout_width="@dimen/main_menu_button_width_200"
            android:layout_height="@dimen/main_menu_button_height_40"
            android:layout_marginTop="@dimen/main_menu_margin_10"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/sound"
            android:textColor="@color/white"
            android:textSize="@dimen/main_menu_text_28"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_menu_help"
            android:layout_width="@dimen/main_menu_button_width_200"
            android:layout_height="@dimen/main_menu_button_height_40"
            android:layout_marginTop="@dimen/main_menu_margin_10"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/help"
            android:textColor="@color/white"
            android:textSize="@dimen/main_menu_text_28"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_menu_info"
            android:layout_width="@dimen/main_menu_button_width_200"
            android:layout_height="@dimen/main_menu_button_height_40"
            android:layout_marginTop="@dimen/main_menu_margin_10"
            android:background="@drawable/button_green"
            android:drawableLeft="@drawable/info"
            android:textColor="@color/white"
            android:textSize="@dimen/main_menu_text_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_menu_height_textview_300"
        android:layout_marginTop="@dimen/main_menu_margin_10"
        android:gravity="center">

        <TextView
            android:id="@+id/textView_menu_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/main_menu_text_36" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_menu_margin_bottom_25"
        android:layout_marginTop="@dimen/main_menu_margin_10"
        android:gravity="center">

        <Button
            android:id="@+id/button_menu_close"
            android:layout_width="@dimen/main_menu_button_close_width_80"
            android:layout_height="@dimen/main_menu_button_close_height_40"
            android:background="@drawable/button_yellow"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/main_menu_text_28"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>