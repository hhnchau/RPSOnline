<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notify_height_200"
    android:layout_marginLeft="@dimen/notify_margin_64"
    android:layout_marginRight="@dimen/notify_margin_64"
    android:background="@drawable/panel_guest"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_notify_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/notify_text_44"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notify_margin_distance_32"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_notify_cancel"
            android:layout_width="@dimen/notify_button_width_80"
            android:layout_height="@dimen/notify_button_height_40"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/notify_margin_16"
            android:background="@drawable/button_yellow"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/notify_text_24"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_notify_ok"
            android:layout_width="@dimen/notify_button_width_80"
            android:layout_height="@dimen/notify_button_height_40"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/notify_margin_16"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/notify_text_24"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>