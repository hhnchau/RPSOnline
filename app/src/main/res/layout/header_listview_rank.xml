<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_row_item"
    android:orientation="horizontal"
    android:padding="@dimen/header_margin_8">

    <Button
        android:id="@+id/button_left_header_rank"
        android:layout_width="@dimen/header_btn_width_80"
        android:layout_height="@dimen/header_btn_height_50"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/textView_header_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/header_text_28"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_right_header_rank"
        android:layout_width="@dimen/header_btn_width_80"
        android:layout_height="@dimen/header_btn_height_50"
        android:background="@drawable/next" />
</LinearLayout>