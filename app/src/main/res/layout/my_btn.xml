<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linnear_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/frg1_btn_input_global_margin_48"
    android:layout_marginRight="@dimen/frg1_btn_input_global_margin_48"
    android:orientation="horizontal">

    <Button
        android:id="@+id/button_type"
        android:layout_width="@dimen/frg1_btn_input_global_width_80"
        android:layout_height="@dimen/frg1_btn_input_global__height_40"
        android:background="@drawable/button_yellow_normal"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/frg1_text_24"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/button_chat"
        android:layout_width="@dimen/frg1_btn_input_global_width_80"
        android:layout_height="@dimen/frg1_btn_input_global__height_40"
        android:background="@drawable/button_yellow_normal"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/frg1_text_24"
        android:textStyle="bold" />

</LinearLayout>