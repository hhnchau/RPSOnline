<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_row"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_billing"
        android:layout_width="@dimen/package_img_width_110"
        android:layout_height="@dimen/package_img_height_110"
        android:padding="3dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/frg5_margin_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_billing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/frg5_text_32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_billing_decscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/frg5_text_22"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/currency_img_width_135"
        android:layout_height="@dimen/currency_img_height_48"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/frg5_margin_8"
        android:background="@drawable/currency"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_billing_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/frg5_margin_left_20"
            android:textColor="@color/white"
            android:textSize="@dimen/frg5_text_32"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>