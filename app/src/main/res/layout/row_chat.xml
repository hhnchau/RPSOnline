<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row_chat_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/row_left"
                layout="@layout/row_chat_left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_chat_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/row_right"
                layout="@layout/row_chat_right" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>