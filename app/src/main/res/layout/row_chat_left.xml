<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/grey_bubble"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/frg1_row_chat_350"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#503719"
                    android:textSize="@dimen/frg1_text_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_location_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frg1_text_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_times_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frg1_text_18" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_msg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/frg1_row_chat_350"
            android:padding="3dp"
            android:textSize="@dimen/frg1_text_18"
            android:textColor="#909293" />

    </LinearLayout>

</RelativeLayout>